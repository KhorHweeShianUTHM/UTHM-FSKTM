@model FriendsWebApp.Models.Diaries

@{
    ViewData["Title"] = "Edit";
}

<h2 class="mb-4 text-warning">Edit Diary</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3" style="width:800px">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width:800px">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="mb-3" style="width:800px">
                <label asp-for="Mood" class="form-label"></label>
                <select asp-for="Mood" class="form-select" asp-items="ViewBag.MoodOptions"></select>
                <span asp-validation-for="Mood" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width:800px">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" style="height: 180px;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3" style="width:800px">
                <label asp-for="CreatedBy" class="form-label">Created By</label>
                <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.Members"></select>
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
