@model FriendsWebApp.Models.Hobbies

@{
    ViewData["Title"] = "Create";
}

<h2 class="mb-4 text-primary">Create Hobby</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3" style="width:800px">
                <label asp-for="HobbyName" class="control-label"></label>
                <input asp-for="HobbyName" class="form-control" />
                <span asp-validation-for="HobbyName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width:800px">
                <label asp-for="StartedOn" class="control-label"></label>
                <input asp-for="StartedOn" class="form-control" />
                <span asp-validation-for="StartedOn" class="text-danger"></span>
            </div>
            <div class="mb-3" style="width:800px">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-select" asp-items="ViewBag.CategoryOptions"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width:800px">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" style="height: 180px;"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="mb-3" style="width:800px">
                <label asp-for="CreatedBy" class="form-label"></label>
                <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.Members"></select>
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
